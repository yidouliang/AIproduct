<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ConsumerDao">

	<sql id="where">
		<where>
			<if test="params.consumerid != null and params.consumerid != ''">
				and consumerid = #{params.consumerid} 
			</if>
			<if test="params.name != null and params.name != ''">
				and name = #{params.name} 
			</if>
			<if test="params.telphone != null and params.telphone != ''">
				and telphone = #{params.telphone} 
			</if>
			<if test="params.type != null and params.type != ''">
				and type = #{params.type} 
			</if>
			<if test="params.starcode != null and params.starcode != ''">
				and starcode = #{params.starcode} 
			</if>
			<if test="params.source != null and params.source != ''">
				and source = #{params.source} 
			</if>
			<if test="params.descinfo != null and params.descinfo != ''">
				and descinfo = #{params.descinfo} 
			</if>
			<if test="params.state != null and params.state != ''">
				and state = #{params.state} 
			</if>
			<if test="params.boxidreg != null and params.boxidreg != ''">
				and boxidreg = #{params.boxidreg} 
			</if>
			<if test="params.ext1 != null and params.ext1 != ''">
				and ext1 = #{params.ext1} 
			</if>
			<if test="params.ext2 != null and params.ext2 != ''">
				and ext2 = #{params.ext2} 
			</if>
			<if test="params.ext3 != null and params.ext3 != ''">
				and ext3 = #{params.ext3} 
			</if>

		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from consumer t
		<include refid="where" />
	</select>

	<select id="list" resultType="Consumer">
		select * from consumer t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update consumer t
		<set>
			<if test="consumerid != null">
				consumerid = #{consumerid}, 
			</if>
			<if test="name != null">
				name = #{name}, 
			</if>
			<if test="telphone != null">
				telphone = #{telphone}, 
			</if>
			<if test="type != null">
				type = #{type}, 
			</if>
			<if test="starcode != null">
				starcode = #{starcode}, 
			</if>
			<if test="source != null">
				source = #{source}, 
			</if>
			<if test="descinfo != null">
				descinfo = #{descinfo}, 
			</if>
			<if test="state != null">
				state = #{state}, 
			</if>
			<if test="boxidreg != null">
				boxidreg = #{boxidreg}, 
			</if>
			<if test="ext1 != null">
				ext1 = #{ext1}, 
			</if>
			<if test="ext2 != null">
				ext2 = #{ext2}, 
			</if>
			<if test="ext3 != null">
				ext3 = #{ext3}, 
			</if>


		</set>

		where t.consumerid = #{consumerid}
	</update>

</mapper>
